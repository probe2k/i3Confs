! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
!                  Background   Foreground  Background Alternate    Highlight Background    Highlight Foreground
rofi.color-window: #000000,     #c7a57c,    #131620
rofi.color-normal: #131620,     #c7a57c,    #131620,                #7c7d7c,                #131620
rofi.color-active: #131620,     #c7a57c,    #131620,                #7c7d7c,                #131620
!rofi.color-urgent: #FF5555,     #070015,    #FF5555,                #7c7d7c,                #131620
!rofi.terminal: urxvt
!rofi.fuzzy: true
rofi.modi: run
rofi.kb-cancel: Escape,Control+c
rofi.hide-scrollbar: true
rofi.separator-style: dash
rofi.opacity: 100
!rofi.fake-transparency: true
!rofi.auto-select: true

! extra confs
!rofi.color-enabled: true
!rofi.color-window: argb:cc2f343f, argb:cc2f343f, argb:cc2f343f
!rofi.color-normal: argb:002f343f, #d8dee8, argb:002f343f, argb:002f343f, #bf616a
!rofi.color-active: #2f343f, #b48ead, #2f343f, #2f343f, #93e5cc
!rofi.color-urgent: #2f343f, #ebcb8b, #2f343f, #2f343f, #ebcb8b
 
! ------------------------------------------------------------------------------
! URxvt Color theme
! ------------------------------------------------------------------------------
 
URxvt*font: xft:Monaco:pixelsize=14:antialiasing=true:size=14,xft:DejaVu Sans:size=12
URxvt*letterspace: 1
URxvt*scrollBar: false
URxvt.intensityStyles: false
!URxvt.background: [75]#000000
URxvt.transparent: true
URxvt.shading: 10
!URxvt.blurRadius: 80
 
Xft.dpi: 100
Xft.antialias: true
Xft.hinting: true
Xft.rgba: rgb
Xft.autohint: false
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

! special
*.foreground:   #ffffff
*.background:   #000000
*.cursorColor:  #ffffff

! black
*.color0:       #000000
*.color8:       #4d4d4d

! red
*.color1:       #cc0403
*.color9:       #3e0605

! green
*.color2:       #19cb00
*.color10:      #23fd00

! yellow
*.color3:       #cecb00
*.color11:      #fffd00

! blue
*.color4:       #001cd1
*.color12:      #0026ff

! magenta
*.color5:       #cb1ed1
*.color13:      #fd28ff

! cyan
*.color6:       #0dcdcd
*.color14:      #14ffff

! white
*.color7:       #e5e5e5
*.color15:      #ffffff

 
URxvt.perl-ext-common: default,matcher,clipboard,url-select,tabbed,-tabbed,font-size
URxvt.url-select.underline: true
URxvt.url-select.launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.keysym.F11: perl:fullscreen:switch
URxvt.secondaryWheel: 1
URxvt.internalBorder:  5
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.iso14755: False
URxvt.keysym.Control-Up:   \033[1;5A
URxvt.keysym.Control-Down:    \033[1;5B
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C

! macros for clipboard and selection
!URxvt.copyCommand:      xclip -i -selection clipboard
!URxvt.pasteCommand:     xclip -o -selection clipboard
URxvt.keysym.M-c:       perl:clipboard:copy
URxvt.keysym.m-v:       perl:clipboard:paste
URxvt.keysym.M-C-v:     perl:clipboard:paste_escaped
!URxvt.keysym.M-Escape:  perl:keyboard-select:activate
!URxvt.keysym.M-s:       perl:keyboard-select:search
URxvt.keysym.M-u:       perl:url-select:select_next
!URxvt.urlLauncher:      firefox
!URxvt.underlineURLs:    true
!URxvt.urlButton:        1
!URxvt.geometry:         90x30

!resize-font
!URxvt.keysym.C-minus: resize-font:smaller
!URxvt.keysym.C-plus: resize-font:bigger
!URxvt.keysym.C-equal: resize_font:reset
!URxvt.keysym.C-question: resize-font:show
 
! tabbed
URxvt.tabbed.tabbar-fg: 4
URxvt.tabbed.tabbar-bg: 16
URxvt.tabbed.tab-fg:    15
URxvt.tabbed.tab-bg:    4
URxvt*buffered:         false
