! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
!                  Background   Foreground  Background Alternate    Highlight Background    Highlight Foreground
rofi.color-window: #000000,     #c7a57c,    #131620
rofi.color-normal: #131620,     #c7a57c,    #131620,                #7c7d7c,                #131620
rofi.color-active: #131620,     #c7a57c,    #131620,                #7c7d7c,                #131620
rofi.terminal: urxvt
rofi.modi: run
rofi.hide-scrollbar: true

! ------------------------------------------------------------------------------
! URxvt Color theme
! ------------------------------------------------------------------------------

URxvt*font: xft:CascadiaMonoPL:pixelsize=14:antialiasing=true:size=14
!URxvt*font: xft:AnonymicePowerline:pixelsize=16:antialiasing=true:size=14
!URxvt*font: xft:MenloforPowerline:pixelsize=14:antialiasing=true:size=14
URxvt*scrollBar: false
URxvt.transparent: true
URxvt.shading: 20
!URxvt.letterSpace: -1
Xft.antialias: true
Xft.rgba: rgb

! special
*.foreground:   #d0d0d0
*.background:   #000000
*.cursorColor:  #d0d0d0

! black
*.color0:       #000000
*.color8:       #808080

! red
*.color1:       #ff0000
*.color9:       #ff5500

! green
*.color2:       #33ff00
*.color10:      #64ff4d

! yellow
*.color3:       #ffff00
*.color11:      #ffff00

! blue
*.color4:       #0066ff
*.color12:      #0066ff

! magenta
*.color5:       #cc00ff
*.color13:      #cc00ff

! cyan
*.color6:       #00ffff
*.color14:      #00ffff

! white
*.color7:       #d0d0d0
*.color15:      #ffffff
 
URxvt.perl-ext-common: clipboard,font-size
URxvt.internalBorder:  5
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.iso14755: False
URxvt.keysym.Control-Left:    \033[1;5D
URxvt.keysym.Control-Right:    \033[1;5C

